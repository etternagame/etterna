.IP "\fBheat\fR" 4
.IX Item "heat"
.IP "\fBlighten\fR" 4
.IX Item "lighten"
.IP "\fBlinearlight\fR" 4
.IX Item "linearlight"
.IP "\fBmultiply\fR" 4
.IX Item "multiply"
.IP "\fBmultiply128\fR" 4
.IX Item "multiply128"
.IP "\fBnegation\fR" 4
.IX Item "negation"
