# editorconfig.org
root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.txt]
indent_style = space

[*.md]
trim_trailing_whitespace = false

[{CMakeLists.txt, *.cmake}]
indent_style = tab
indent_size = 4

[*.lua]
indent_style = space
indent_size = 4
